.l-bar-slot
    position absolute
    right 2px
    bottom 2px
    z-index 1
    border-radius 4px

    .l-bar-slot__scrollbar
        position absolute
        transition opacity 120ms ease-out

.is-horizontal
    left 2px
    height 6px

    &>div
        width 100%
        height 100%

.is-vertical
    top 2px
    width 6px

    &>div
        width 100%
.l-bar-slot
    position relative
    z-index 1
    border-radius 4px
    background-color $lo1

    .l-bar-slot__scrollbar
        position absolute
        transition opacity 120ms ease-out

    &.is-eva
        background-color $p2

.is-horizontal
    left 2px
    height 6px

    &>div
        width 100%
        height 100%

.is-vertical
    top 2px
    width 6px

    &>div
        width 100%